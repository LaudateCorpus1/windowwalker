<Window x:Class="WindowWalker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize" WindowStyle="None" Loaded="SetWindowLocation">
    <Grid>
        <Border BorderThickness="5" BorderBrush="Gray" x:Name="windowBorder">
            <StackPanel>
                <TextBox x:Name="searchTextBox" TextChanged="TextChangedEvent" KeyUp="KeyPressActionHandler" />
                <Grid Height="5" Background="Gray" x:Name="separator" />
                <ListBox x:Name="resultsListBox" ScrollViewer.HorizontalScrollBarVisibility="Disabled" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
